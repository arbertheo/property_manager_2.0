<!DOCTYPE html>
<html>
<%= image_tag "" %>

<head>
  <title>PropertyManager20</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>


<body>
  <div class="top-bar">
     <div class="top-bar-left">
       <ul class="menu">
         <li class="menu-text">Property Manager 2.0</li>
         <li><a href="#">About</a></li>
       </ul>
     </div>

     <div class="top-bar-right">
       <ul class="menu">
         <li><a href="/users/sign_up">Sign up</a></li>
         <li><a href="/users/sign_in">Sign In</a></li>
         <li><a href="/properties">Main Page</a></li>
         <li><%= button_to "Sign out", destroy_user_session_path,class: "signout", method: :delete %></li>
       </ul>
     </div>
   </div>

   <% flash.each do |type, message| %>
     <div class="flash flash-<%= type %>">
       <%= message %>
     </div>
   <% end %>


<%= yield %>

